---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Blog | ${SITE_TITLE}`}
			description={SITE_DESCRIPTION}
		/>
		<style>
			main {
				max-width: 1000px;
				margin: 0 auto;
				padding: 4rem 1.5rem;
			}

			.page-header {
				text-align: center;
				margin-bottom: 4rem;
			}

			.page-header h1 {
				margin-bottom: 1rem;
				text-shadow: 2px 2px 8px rgba(139, 0, 0, 0.5);
			}

			.page-header p {
				color: var(--text-secondary);
				font-size: 1.1rem;
				max-width: 600px;
				margin: 0 auto;
			}

			.posts-grid {
				display: grid;
				gap: 2.5rem;
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.post-card {
				background: linear-gradient(
					135deg,
					var(--bg-secondary),
					var(--bg-primary)
				);
				border: 1px solid var(--border-color);
				border-radius: 8px;
				overflow: hidden;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				box-shadow: var(--shadow-md);
				position: relative;
			}

			.post-card::after {
				content: "";
				position: absolute;
				inset: -2px;
				background: linear-gradient(
					135deg,
					var(--accent-blood),
					var(--accent-purple)
				);
				opacity: 0;
				z-index: -1;
				transition: opacity 0.4s ease;
				border-radius: 8px;
			}

			.post-card:hover {
				transform: translateY(-6px);
				box-shadow: var(--shadow-glow);
			}

			.post-card:hover::after {
				opacity: 0.4;
			}

			.post-card a {
				display: grid;
				grid-template-columns: 300px 1fr;
				gap: 0;
				color: inherit;
				text-decoration: none;
			}

			.post-image {
				width: 100%;
				height: 250px;
				object-fit: cover;
				filter: grayscale(20%) brightness(0.85);
				transition: all 0.4s ease;
			}

			.post-card:hover .post-image {
				filter: grayscale(0%) brightness(1);
				transform: scale(1.05);
			}

			.post-content {
				padding: 2rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
			}

			.post-date {
				color: var(--accent-blood-light);
				font-size: 0.85rem;
				letter-spacing: 0.1em;
				text-transform: uppercase;
				margin-bottom: 1rem;
				font-weight: 600;
			}

			.post-title {
				font-size: clamp(1.5rem, 3vw, 2rem);
				margin: 0;
				color: var(--text-primary);
				line-height: 1.3;
				font-family: var(--font-horror);
				transition: color 0.3s ease;
			}

			.post-card:hover .post-title {
				color: var(--accent-blood-light);
				text-shadow: 0 0 10px rgba(139, 0, 0, 0.5);
			}

			/* Special styling for first post */
			.posts-grid li:first-child .post-card {
				background: linear-gradient(
					135deg,
					var(--bg-tertiary),
					var(--bg-secondary)
				);
			}

			.posts-grid li:first-child .post-card a {
				grid-template-columns: 1fr;
			}

			.posts-grid li:first-child .post-image {
				width: 100%;
				height: 400px;
			}

			.posts-grid li:first-child .post-content {
				padding: 3rem;
				text-align: center;
			}

			.posts-grid li:first-child .post-title {
				font-size: clamp(2rem, 4vw, 2.8rem);
				margin-bottom: 1rem;
			}

			/* Responsive */
			@media (max-width: 768px) {
				.post-card a {
					grid-template-columns: 1fr;
				}

				.post-image {
					height: 200px;
				}

				.post-content {
					padding: 1.5rem;
				}

				.posts-grid li:first-child .post-image {
					height: 250px;
				}

				.posts-grid li:first-child .post-content {
					padding: 2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-header">
				<h1>Tales from the Archive</h1>
				<p>
					Delve into the collection of stories, thoughts, and
					nightmares. Each entry a doorway into darkness.
				</p>
			</div>

			<ul class="posts-grid">
				{
					posts.map((post) => (
						<li>
							<article class="post-card">
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											class="post-image"
											width={600}
											height={400}
											src={post.data.heroImage}
											alt=""
										/>
									)}
									<div class="post-content">
										<div class="post-date">
											<FormattedDate
												date={post.data.pubDate}
											/>
										</div>
										<h2 class="post-title">
											{post.data.title}
										</h2>
									</div>
								</a>
							</article>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
